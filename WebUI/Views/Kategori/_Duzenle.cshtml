@using ModelDto.Dtos.Kategori;
@model DtoKategoriKaydet

<div id="kt_app_content" class="app-content  flex-column-fluid ">
    <div id="kt_app_content_container" class="app-container  container-fluid ">
        <div class="card mb-5 mb-xl-10">
            <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse"
                 data-bs-target="#kt_account_profile_details" aria-expanded="true"
                 aria-controls="kt_account_profile_details">
                <div class="card-title m-0">
                    <h3 class="fw-bold m-0">Kategori Detayları</h3>
                </div>
            </div>
            <div id="" class="collapse show">
                @using (Html.BeginForm("Index", "Kayit", FormMethod.Post, new { @id = "frmKategoriKaydet", enctype = "multipart/form-data", autocomplete = "off" }))
                {
                    @Html.HiddenFor(model=>model.Id)
                    <div class="card-body border-top p-9">
                        <div class="row mb-6">
                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kategori Adı</label>
                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                @Html.TextBoxFor(model => model.Ad,new { @class = "form-control form-control-lg form-control-solid", placeholder="Kategori Adı", @tabindex = "1" })
                                <div class="fv-plugins-message-container invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="row mb-6">
                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kategori Tipi</label>
                            <div class="col-lg-8 fv-row" data-select2-id="select2-data-143-4dsl">
                                @Html.DropDownListFor(model => model.KategoriTipId, (SelectList)ViewBag.kategoriTipListesi, "", new { @class = "ddlselect2Genel form-select form-select-solid form-select-lg" })
                            </div>
                        </div>
                        <div class="row mb-6">
                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Kategori Yetkileri</label>
                            <div class="col-lg-8 fv-row fv-plugins-icon-container">
                                @Html.TextBoxFor(model => model.Yetkileri,new { @class = "form-control form-control-lg form-control-solid", placeholder="Kategori Yetkileri", @tabindex = "1" })
                                <div class="fv-plugins-message-container invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-end py-6 px-9">
                        @{
                            if (Model.Id > 0)
                            {
                                <div class="btn btn-light btn-active-light-danger me-2" id="btnKategoriSil">Sil</div>
                                <div class="btn btn-primary btnDuzenle" id="btnKategoriGuncelle">Güncelle</div>
                            }
                            else
                            {
                                <div type="reset" class="btn btn-light btn-active-light-primary me-2" id="btnKategoriTemizle">Temizle</div>
                                <div class="btn btn-primary btnDuzenle" id="btnKategoriKaydet">Kaydet</div>
                            }
                        }
                    </div>
                    <input type="hidden">
                }
            </div>
        </div>
    </div>
</div>
